<!DOCTYPE html>
<html>
<head>
  <title>Froodle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container">
  <!-- Google Sign in -->
  <nav>
    <span id="signinButton">
      <span
        class="g-signin"
        data-callback="signinCallback"
        data-clientid="326708415798-9ildkh4i1g8k5unf43cgdk8774oikhbk.apps.googleusercontent.com"
        data-cookiepolicy="single_host_origin"
        data-requestvisibleactions="http://schema.org/AddAction"
        data-redirecturi="postmessage"
        data-scope="https://www.googleapis.com/auth/plus.login">
      </span>
    </span>
    <script type="text/javascript"></script>

  <% if @current_user %>
    <div id="username" class="row"><%= "Welcome back #{@current_user.name}!" %> <a class="logout" href="#">Log Out</a></div>
      <div id="smartnav">
        <ul class="nav nav-tabs" role="tablist">
          <li><%= link_to("User Details", users_details_path) %></li>
          <li><%= link_to("Draw!", new_doodle_path) %></li>
          <li><%= link_to("Suggest Prompts", new_prompt_path) %></li>
          <li><%= link_to("Guess Doodles", doodle_guess_path) %></li>
        </ul>
      </div>
    <% end %>
  </nav>

  <%= yield %>
</div>
</body>
</html>
