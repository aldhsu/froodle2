<div id="newprompt">
  <h1>Suggest a new Prompt</h1>
  <%= form_for @prompt do |f| %>
    <p>
      <%= f.label :question %>
      <%= f.text_field :question %>
    </p>
    <p>
      <%= f.label :difficulty %>

      <span>Easy</span><%= f.range_field(:difficulty, in: 1..10, id: "difficulty") %><span>Hard</span>
    </p>

    <%= f.submit %>
  <% end %>
</div>